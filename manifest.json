{
    "manifest_version":2,


    "name":"OAuthGuard",
    "version":"1.0.3",
    "description": "An OAuth 2.0 and OpenID Connect Vulnerability Scanner",

    "browser_action": {
        "default_title":"OAuthGuard",
        "default_icon": "images/logo128px.png",
        "default_popup":"contents/popup.html"

    },
    "icons":{
        "128" : "images/logo128px.png"
    },

    "background":{
        "scripts":["scripts/background.js"],
        "persistent" : true
    },
    "permissions":[
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "downloads",
        "notifications"
    ]
}
